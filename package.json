{
  "name": "@forgedev-br/eslint-config",
  "version": "1.1.0",
  "contributors": [
    "Adeonir Kohl <adeonir@gmail.com> (https://adeonir.dev/)",
    "Wilson Faustino <wilson.rfaustino@gmail.com>"
  ],
  "description": "ESLint configuration used by ForgeDev BR",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./base": "./base.js",
    "./next": "./next.js",
    "./node": "./node.js",
    "./vite": "./vite.js"
  },
  "keywords": [
    "eslint",
    "lint",
    "prettier",
    "format",
    "javascript",
    "typescript",
    "vite",
    "node",
    "react",
    "nextjs",
    "tailwindcss"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky",
    "changeset": "changeset",
    "release": "changeset version",
    "publish": "changeset publish"
  },
  "peerDependencies": {
    "eslint": "^8",
    "prettier": "^3",
    "typescript": "^5",
    "standard": "^17"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^17.7.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unicorn": "^53.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.6.0"
  },
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5"
  }
